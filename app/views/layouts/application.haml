!!!5
%html
  %head
    %meta{ :"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }
    %title Gaming Night Society
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'token-input.css', :media => 'screen, projection'
    %link{ :rel => "home", :href => root_url, :type => "text/html" }
  %body
    %header
      %h1= link_to "Gaming Night Society", root_path, :rel => "home"
      = render "shared/header_links"
    #content
      %section.main
        = yield
      %section.sidebar
        = yield :sidebar
    = javascript_include_tag 'jquery-1.4.2.min', 'rails', 'jquery.tokeninput', 'application'
